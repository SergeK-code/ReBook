<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_bg">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:text="Back"
        android:background="@android:color/transparent"
        android:textColor="@color/gray"/>

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="25dp"
        android:text="Cancel"
        android:background="@android:color/transparent"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_btn"
        android:layout_alignStart="@id/back_btn"
        android:layout_marginTop="50dp"
        android:text="Delete Books"
        android:textColor="@color/dark_gray"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:id="@+id/cart_items_count_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/title"
        android:layout_alignStart="@id/title"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/cart_items_count_container"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No books to show"

            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarFadeDuration="1"
            android:verticalSpacing="20dp"
            android:smoothScrollbar="true"
            />

    </LinearLayout>



</RelativeLayout>