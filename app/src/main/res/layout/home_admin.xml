<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center|top">

    <RelativeLayout
        android:id="@+id/group"
        android:layout_width="653.92dp"
        android:layout_height="450dp"
        android:layout_marginStart="-79.66dp"
        android:layout_marginTop="-139.88dp"
        android:paddingRight="-50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/path_796"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-1dp"
            android:scaleType="fitXY"
            android:src="@drawable/path_796"
            />

        <ImageView
            android:id="@+id/path_795"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/path_795" />
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:paddingRight="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="150dp"
            android:text="Logout"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="7"
            />

        <TextView
            android:id="@+id/greeting"
            android:layout_width="176dp"
            android:layout_height="68dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="200dp"
            android:text="Hi admin!"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:gravity="left"
            android:lineHeight="36sp"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:shadowColor="#88000000"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="253dp"
            android:layout_height="59dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="250dp"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:lineHeight="22sp"
            android:text="Manage Books"
            android:textColor="#707070"
            android:textSize="20sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/form"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:padding="16dp"
            android:text="Add Book"
            android:textSize="20dp" />

        <Button
            android:id="@+id/delete_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:text="Delete Book"
            android:textSize="20dp" />


        <Button
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:text="Edit Profile"
            android:textSize="20dp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/groupe"
        android:layout_width="700dp"
        android:layout_height="500dp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-50.88dp"
        android:paddingRight="-50dp"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-1dp"
        android:scaleType="fitXY"
        android:src="@drawable/group123"
        />
    </RelativeLayout>



</LinearLayout>