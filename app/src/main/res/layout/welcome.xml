<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_bg"
    >
    <ImageView
        android:id="@+id/SharingKnowledge"
        android:layout_width="410dp"
        android:layout_height="250dp"
        android:layout_gravity="left"
        android:layout_marginBottom="0dp"
        android:src="@drawable/sharing_knowledge" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="-130dp"
        android:layout_marginBottom="70dp"
        android:text="Sharing Knowledge!"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/Book_exchange"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/book_exchange" />

    <TextView
        android:id="@+id/subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:text="To start exchanging books:"
        android:textColor="@color/gray"
        android:textSize="16sp" />


        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-26.5dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/login_button"
            android:text="Login"
            />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="-50dp"
            android:layout_marginLeft="189dp"
            android:layout_marginTop="-48dp"
            android:background="@drawable/register_button"
            android:text="Register"

            />


</LinearLayout>